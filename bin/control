#!/bin/bash -e

PATH=${OPENSHIFT_DATA_DIR}/node/bin/:/bin/:/usr/bin:$PATH

source $OPENSHIFT_CARTRIDGE_SDK_BASH

function start {
    cd $OPENSHIFT_REPO_DIR
    nohup npm start -d >> $OPENSHIFT_NODEJS_LOG_DIR/node.log 2>&1 &
}

function stop {
    killall node
}

function restart {
    stop
    start
}

function build {
    cd $OPENSHIFT_REPO_DIR
    npm config set tmp $OPENSHIFT_TMP_DIR
    npm install
}

function tidy {
    shopt -s dotglob
    rm -rf $OPENSHIFT_NODEJS_LOG_DIR/*
    rm -rf $OPENSHIFT_TMP_DIR/*
}

function catchall {
    echo "not yet implemented"
}

case "$1" in
  start)       start ;;
  stop)        stop ;;
  restart)     restart ;;
  status)      status ;;
  reload)      catchall ;;
  tidy)        tidy ;;
  pre-build)   catchall ;;
  build)       build ;;
  deploy)      catchall ;;
  post-deploy) catchall ;;
  *)           exit 0
esac

exit 0
